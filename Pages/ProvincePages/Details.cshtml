@page
@model assig2.Pages.ProvincePages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Province.ProvinceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Province.ProvinceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Province.ProvinceCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Province.ProvinceCode)
        </dd>
        <dt class="col-sm-2">
            Cities
        </dt>
        <dd class="col-sm-10">
            <ul class="list-inline">
                @foreach (var city in Model.Province.Cities)
                {
                    <li class="list-inline-item">@city.CityName</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Province?.ProvinceCode">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>